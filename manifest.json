{
    "manifest_version": 2,
    "name": "Split View",
    "description": "Open tabs in a native split view right in your browser",
    "homepage_url": "https://github.com/jrmgx/SplitViewExtension",
    "version": "0.1",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking",
        "management",
        "webNavigation"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "actions.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}
